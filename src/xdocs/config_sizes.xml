    <section name="ParameterNumber">
      <subsection name="Description" id="ParameterNumber_Description">
        <p>Since Checkstyle 3.0</p>
        <p>
          Checks the number of parameters of a method or constructor.
        </p>
      </subsection>

      <subsection name="Properties" id="ParameterNumber_Properties">
        <table>
          <tr>
            <th>name</th>
            <th>description</th>
            <th>type</th>
            <th>default value</th>
            <th>since</th>
          </tr>
          <tr>
            <td>max</td>
            <td>maximum allowable number of parameters</td>
            <td><a href="property_types.html#integer">Integer</a></td>
            <td>7</td>
            <td>3.0</td>
          </tr>
          <tr>
            <td>ignoreOverriddenMethods</td>
            <td>Ignore number of parameters for methods with @Override annotation</td>
            <td><a href="property_types.html#boolean">Boolean</a></td>
            <td>false</td>
            <td>6.2</td>
          </tr>
          <tr>
            <td>tokens</td>
            <td>tokens to check</td>

            <td>
              subset of tokens <a
