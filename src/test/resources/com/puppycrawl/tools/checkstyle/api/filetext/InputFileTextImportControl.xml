<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
    "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control package="com">
  <allow class="some.class"/>
  <forbid class="another.class" local-only="true"/>
  <allow package="some.package"/>
  <forbid package="another.package" local-only="true"/>
  <forbid package="and.another.package" exact-match="true"/>
  <subpackage name="puppycrawl">
    <forbid package="some.package"/>
    <forbid class="some.class"/>
  </subpackage>
</import-control>
