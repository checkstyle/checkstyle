<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
    "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control package="com.puppycrawl.tools.checkstyle.checks.imports" strategyOnMismatch="forbidden">
  <subpackage name="importcontrol" strategyOnMismatch="allowed">
    <!-- keep "<disallow" to ensure test coverage and downwards compatibility to import_control_1_4.dtd -->
    <disallow class="java\..*\.Image" local-only="true" regex="true"/>
    <forbid package="javax\.swing" regex="true"/>
  </subpackage>
</import-control>
