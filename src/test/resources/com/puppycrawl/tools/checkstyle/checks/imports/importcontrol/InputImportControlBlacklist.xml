<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
        "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control pkg="com.puppycrawl.tools.checkstyle.checks.imports">
  <allow pkg=".*" regex="true"/>
  <subpackage name="importcontrol">
    <forbid class="java.util.Date"/>
    <forbid pkg="java.util.stream"/>
  </subpackage>
</import-control>
