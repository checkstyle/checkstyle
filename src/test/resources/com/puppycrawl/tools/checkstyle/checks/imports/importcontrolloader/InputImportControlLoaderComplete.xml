<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
    "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control pkg="com">
  <allow class="some.class"/>
  <forbid class="another.class" local-only="true"/>
  <allow pkg="some.pkg"/>
  <forbid pkg="another.pkg" local-only="true"/>
  <forbid pkg="and.another.pkg" exact-match="true"/>
  <subpackage name="puppycrawl">
    <forbid pkg="some.pkg"/>
    <forbid class="some.class"/>
  </subpackage>
  <file name="Class">
    <forbid pkg="some.pkg"/>
  </file>
  <file name=".*Class.*" regex="true">
    <allow class="some.class"/>
    <forbid class="some.class"/>
  </file>
</import-control>
