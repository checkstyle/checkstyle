<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
        "https://checkstyle.org/dtds/import_control_1_4.dtd">

<import-control pkg="com\.puppycrawl\.tools\.checkstyle\.checks\.imports" regex="true">
  <allow pkg="java\.io\.File" local-only="true" regex="true"/>
  <subpackage name=".*control" regex="true" strategyOnMismatch="allowed">
    <disallow pkg="java\.io" local-only="true" regex="true"/>
  </subpackage>
</import-control>
