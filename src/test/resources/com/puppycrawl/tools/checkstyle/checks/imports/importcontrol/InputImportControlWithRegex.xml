<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
        "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control package="com\.puppycrawl\.tools\.checkstyle\.checks\.imports" regex="true">
  <allow package="java\.io\.File" local-only="true" regex="true"/>
  <subpackage name=".*control" regex="true" strategyOnMismatch="allowed">
    <forbid package="java\.io" local-only="true" regex="true"/>
  </subpackage>
</import-control>
