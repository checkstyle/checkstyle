<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Checkstyle//DTD ImportControl Configuration 1.5//EN"
    "https://checkstyle.org/dtds/import_control_1_5.dtd">

<import-control package="com.puppycrawl.tools.checkstyle.checks.imports" strategyOnMismatch="allowed">
  <allow class="java\.awt\.Image" regex="true"/>
  <allow class="java\..*\.File" local-only="true" regex="true"/>
  <!-- keep strategyOnMismatch="disallowed" to ensure test coverage and downwards compatibility -->
  <subpackage name="importcontrol" strategyOnMismatch="disallowed">
    <!-- keep "<disallow class=" to ensure test coverage and downwards compatibility -->
    <disallow class="java\..*\.Image" local-only="true" regex="true"/>
    <allow package="javax\.swing" regex="true"/>
    <allow package="java\.io" exact-match="true" local-only="true" regex="true"/>
  </subpackage>
</import-control>
