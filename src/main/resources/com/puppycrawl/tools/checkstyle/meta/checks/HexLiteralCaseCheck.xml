<?xml version="1.0" encoding="UTF-8"?>
<checkstyle-metadata>
   <module>
      <check fully-qualified-name="com.puppycrawl.tools.checkstyle.checks.HexLiteralCaseCheck"
             name="HexLiteralCase"
             parent="com.puppycrawl.tools.checkstyle.TreeWalker">
         <description>&lt;div&gt; Checks that hexadecimal literals are defined using uppercase letters &lt;code&gt;(A-F)&lt;/code&gt;
 rather than lowercase &lt;code&gt;(a-f)&lt;/code&gt;.
 This convention follows the
 &lt;a href="https://cr.openjdk.org/~alundblad/styleguide/index-v6.html#toc-literals"&gt;
 OpenJDK Style Guide&lt;/a&gt;.
 &lt;/div&gt;</description>
         <message-keys>
            <message-key key="hex.literal"/>
         </message-keys>
      </check>
   </module>
</checkstyle-metadata>
