 &lt;a
 href="https://checkstyle.org/config_coding.html#UnnecessarySemicolonAfterTypeMemberDeclaration"&gt;
 UnnecessarySemicolonAfterTypeMemberDeclaration&lt;/a&gt; is responsible for it.
 &lt;/p&gt;</description>
         <properties>
            <property default-value="CLASS_DEF,INTERFACE_DEF,ENUM_DEF,ANNOTATION_DEF,RECORD_DEF"
                      name="tokens"
                      type="java.lang.String[]"
                      validation-type="tokenSet">
               <description>tokens to check</description>
            </property>
         </properties>
         <message-keys>
            <message-key key="unnecessary.semicolon"/>
         </message-keys>
      </check>
   </module>
