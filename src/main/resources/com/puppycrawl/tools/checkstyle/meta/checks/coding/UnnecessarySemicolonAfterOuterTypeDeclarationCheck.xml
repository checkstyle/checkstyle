<?xml version="1.0" encoding="UTF-8"?>
<checkstyle-metadata>
  <module>
    <check fully-qualified-name="com.puppycrawl.tools.checkstyle.checks.coding.UnnecessarySemicolonAfterOuterTypeDeclarationCheck"
             name="UnnecessarySemicolonAfterOuterTypeDeclaration"
             parent="com.puppycrawl.tools.checkstyle.TreeWalker">
      <description>&lt;div&gt;
 Checks if unnecessary semicolon is used after type declaration.
 &lt;/div&gt;

 &lt;p&gt;
 This check is not applicable to nested type declarations,
 &lt;a
 href="https://checkstyle.org/checks/coding/unnecessarysemicolonaftertypememberdeclaration.html"&gt;
 UnnecessarySemicolonAfterTypeMemberDeclaration&lt;/a&gt; is responsible for it.
 &lt;/p&gt;</description>
      <properties>
        <property default-value="CLASS_DEF,INTERFACE_DEF,ENUM_DEF,ANNOTATION_DEF,RECORD_DEF"
                      name="tokens"
                      type="java.lang.String[]"
                      validation-type="tokenSet">
          <description>tokens to check</description>
        </property>
      </properties>
      <message-keys>
        <message-key key="unnecessary.semicolon"/>
      </message-keys>
    </check>
  </module>
</checkstyle-metadata>
