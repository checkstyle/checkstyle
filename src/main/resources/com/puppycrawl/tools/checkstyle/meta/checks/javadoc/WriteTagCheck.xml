<?xml version="1.0" encoding="UTF-8"?>

<checkstyle-metadata>
  <module>
    <check name="WriteTag" fully-qualified-name="com.puppycrawl.tools.checkstyle.checks.javadoc.WriteTagCheck" parent="com.puppycrawl.tools.checkstyle.TreeWalker">
      <description><![CDATA[<p>
 Requires user defined Javadoc tag to be present in Javadoc comment with defined format.
 To define the format for a tag, set property tagFormat to a regular expression.
 Property tagSeverity is used for severity of events when the tag exists.
 </p>]]></description>
      <properties>
        <property name="tag" type="java.lang.String">
          <description><![CDATA[Specify the name of tag.]]></description>
        </property>
        <property name="tagFormat" type="java.util.regex.Pattern">
          <description><![CDATA[Specify the regexp to match tag content.]]></description>
        </property>
        <property name="tagSeverity" type="com.puppycrawl.tools.checkstyle.api.SeverityLevel" default-value="info">
          <description><![CDATA[Specify the severity level when tag is found and printed.]]></description>
        </property>
        <property name="tokens" type="java.lang.String[]" default-value="INTERFACE_DEF,CLASS_DEF,ENUM_DEF,ANNOTATION_DEF" validation-type="tokenSet">
          <description><![CDATA[tokens to check]]></description>
        </property>
      </properties>
      <message-keys>
        <message-key key="javadoc.writeTag"/>
        <message-key key="type.missingTag"/>
        <message-key key="type.tagFormat"/>
      </message-keys>
    </check>
  </module>
</checkstyle-metadata>
