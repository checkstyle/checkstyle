              files=".ci[\\/]shippable.sh"/>
    <suppress checks="RegexpSingleline"
              files=".ci[\\/]sonar.sh"/>
    <suppress checks="RegexpSingleline"
              files=".ci[\\/]test-spelling-unknown-words.sh"/>
    <suppress checks="RegexpSingleline"
              files=".ci[\\/]travis[\\/]checkchmod.sh"/>
    <suppress checks="RegexpSingleline"
              files=".ci[\\/]travis[\\/]travis.sh"/>
