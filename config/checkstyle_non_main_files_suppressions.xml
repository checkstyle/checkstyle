              files=".ci[\\/]travis[\\/]xtr_pr-description.sh"/>
    <suppress checks="RegexpSingleline"
              files=".ci[\\/]travis[\\/]xtr_releasenotes-gen.sh"/>
    <suppress checks="RegexpSingleline"
