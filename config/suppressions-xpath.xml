<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">

<suppressions>
    <!-- Tone down the checking for test code -->
    <suppress-xpath checks="NPathComplexity"
                    query="/CLASS_DEF[@firstIdentText='XdocsPagesTest']
                    //METHOD_DEF[@firstIdentText='validateCheckSection'
                                  or @firstIdentText='getModulePropertyExpectedValue']"/>

    <suppress-xpath checks="CyclomaticComplexity"
                    query="/CLASS_DEF[@firstIdentText='XdocsPagesTest']//METHOD_DEF"/>

    <!-- Suppressions from PMD configuration-->
    <!-- JavadocMethodCheck, JavadocStyleCheck, JavadocUtil.getJavadocTags() - deprecated -->
    <suppress-xpath checks="CyclomaticComplexity"
                    query="/CLASS_DEF[@firstIdentText='JavadocMethodCheck'
                    or @firstIdentText='JavadocStyleCheck'
                    or @firstIdentText='CustomImportOrderCheck']//METHOD_DEF"/>
</suppressions>
